<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if personalInfo %}{{ personalInfo.headline }}{% else %}Resume{% endif %}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            line-height: 1.5;
            max-width: 900px;
            margin: 0 auto;
        }
        header {
            text-align: center;
            margin-bottom: 20px;
        }
        h1 {
            margin: 0;
            font-size: 24px;
        }
        .contact-info {
            text-align: center;
            margin-bottom: 15px;
        }
        h2 {
            font-size: 18px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
            margin-top: 20px;
            margin-bottom: 10px;
        }
        .section {
            margin-bottom: 20px;
        }
        .experience, .education, .project {
            margin-bottom: 15px;
        }
        .title-line {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
            margin-bottom: 5px;
        }
        ul {
            margin-top: 5px;
            margin-bottom: 5px;
        }
        li {
            margin-bottom: 5px;
        }
        .skills-list {
            display: flex;
            flex-wrap: wrap;
        }
        .skills-category {
            margin-right: 20px;
            margin-bottom: 10px;
        }
        .about-me {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <h1>{% if personalInfo %}{{ personalInfo.headline | upper }}{% else %}RESUME{% endif %}</h1>
        <div class="contact-info">
            {% if personalInfo %}
                {{ personalInfo.location }}<br>
                {{ personalInfo.phone }} | <a href="mailto:{{ email }}">{{ email }}</a> | 
                {% if personalInfo.website %}<a href="{{ personalInfo.website }}" target="_blank">{{ personalInfo.website }}</a>{% endif %}
            {% endif %}
        </div>
    </header>

    {% if jobPreferences %}
    <div class="section about-me">
        <h2>About me</h2>
        <p>A {{ jobPreferences.remotePreference }} professional seeking {{ jobPreferences.jobTypes|join(', ') }} opportunities{% if jobPreferences.locations %} in {{ jobPreferences.locations|join(', ') }}{% endif %}. 
        {% if jobPreferences.immediateStart %}Available for immediate start.{% endif %}
        {% if jobPreferences.salaryExpectation %}Expected salary: {{ jobPreferences.salaryExpectation }}.{% endif %}</p>
    </div>
    {% endif %}

    {% if education and education|length > 0 %}
    <div class="section">
        <h2>Education</h2>
        {% for edu in education %}
        <div class="education">
            <div class="title-line">
                <span>{{ edu.school }}</span>
                <span>{{ edu.startDate }} - {% if edu.current %}Present{% else %}{{ edu.endDate }}{% endif %}</span>
            </div>
            <div>{{ edu.degree }}{% if edu.fieldOfStudy %}, {{ edu.fieldOfStudy }}{% endif %}{% if edu.grade %} (GPA: {{ edu.grade }}){% endif %}</div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if experience and experience|length > 0 %}
    <div class="section">
        <h2>Experience</h2>
        {% for exp in experience %}
        <div class="experience">
            <div class="title-line">
                <span>{{ exp.company }} | {{ exp.title }}</span>
                <span>{{ exp.startDate }} - {% if exp.current %}Present{% else %}{{ exp.endDate }}{% endif %}</span>
            </div>
            {% if exp.description %}
            <ul>
                {% for item in exp.description.split('\n') %}
                {% if item.strip() %}
                <li>{{ item.strip() }}</li>
                {% endif %}
                {% endfor %}
            </ul>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if projects and projects|length > 0 %}
    <div class="section">
        <h2>Projects</h2>
        {% for project in projects %}
        <div class="project">
            <div class="title-line">{{ project.title }}{% if project.url %} | <a href="{{ project.url }}" target="_blank">Link</a>{% endif %}</div>
            {% if project.technologies and project.technologies|length > 0 %}
            <div><em>Technologies: {{ project.technologies|join(', ') }}</em></div>
            {% endif %}
            {% if project.description %}
            <ul>
                {% for item in project.description.split('\n') %}
                {% if item.strip() %}
                <li>{{ item.strip() }}</li>
                {% endif %}
                {% endfor %}
            </ul>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if skills and skills|length > 0 %}
    <div class="section">
        <h2>Skills</h2>
        <ul>
            {% for skill in skills %}
            <li>{{ skill }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if certifications and certifications|length > 0 %}
    <div class="section">
        <h2>Certifications</h2>
        <ul>
            {% for cert in certifications %}
            <li><strong>{{ cert.name }}</strong>: {{ cert.description }}{% if cert.credentialUrl %} <a href="{{ cert.credentialUrl }}" target="_blank">[Verify]</a>{% endif %}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</body>
</html>
